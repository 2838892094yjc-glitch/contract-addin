<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
          xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
          xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
          xsi:type="TaskPaneApp">

  <!-- 插件的基本信息 -->
  <Id>5f7a2b9e-1234-4567-89ab-cdef01234567</Id>
  <Version>1.0.0.1</Version>
  <ProviderName>ContractAssistant</ProviderName>
  <DefaultLocale>zh-CN</DefaultLocale>
  <DisplayName DefaultValue="合同起草助手" />
  <Description DefaultValue="自动填充合同关键变量的 Word 插件" />

  <!-- 主机设置 -->
  <Hosts>
    <Host Name="Document" />
  </Hosts>

  <!-- 默认设置 -->
  <DefaultSettings>
    <!-- 这里假设您在本地 3000 端口运行，或者直接打开文件（但 Word 插件通常需要 HTTPS） -->
    <!-- 开发时通常使用 https://127.0.0.1:3000/taskpane.html -->
    <SourceLocation DefaultValue="https://127.0.0.1:3000/taskpane.html" />
  </DefaultSettings>

  <!-- 权限请求 -->
  <Permissions>ReadWriteDocument</Permissions>

  <!-- 版本覆盖 (Version Overrides) 用于较新的 Office 版本 -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Host">
        <DesktopFormFactor>
          <GetStarted>
            <Title residue="GetStarted.Title"/>
            <Description residue="GetStarted.Description"/>
            <LearnMoreUrl residue="GetStarted.LearnMoreUrl"/>
          </GetStarted>
          <FunctionFile residue="Commands.Url" />
          
          <!-- 扩展 Ribbon 菜单 -->
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <CustomTab id="TabContract">
              <Label residue="TabContract.Label" />
              <Group id="GrpContract">
                <Label residue="GrpContract.Label" />
                <Icon>
                  <bt:Image size="16" residue="Icon.16x16" />
                  <bt:Image size="32" residue="Icon.32x32" />
                  <bt:Image size="80" residue="Icon.80x80" />
                </Icon>
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label residue="TaskpaneButton.Label" />
                  <Supertip>
                    <Title residue="TaskpaneButton.Label" />
                    <Description residue="TaskpaneButton.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" residue="Icon.16x16" />
                    <bt:Image size="32" residue="Icon.32x32" />
                    <bt:Image size="80" residue="Icon.80x80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation residue="Taskpane.Url" />
                  </Action>
                </Control>
              </Group>
            </CustomTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    
    <!-- 资源定义 -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://127.0.0.1:3000/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://127.0.0.1:3000/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://127.0.0.1:3000/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://go.microsoft.com/fwlink/?LinkId=276812" />
        <bt:Url id="Commands.Url" DefaultValue="https://127.0.0.1:3000/commands.html" />
        <bt:Url id="Taskpane.Url" DefaultValue="https://127.0.0.1:3000/taskpane.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GetStarted.Title" DefaultValue="开始使用合同助手" />
        <bt:String id="TabContract.Label" DefaultValue="合同助手" />
        <bt:String id="GrpContract.Label" DefaultValue="起草工具" />
        <bt:String id="TaskpaneButton.Label" DefaultValue="打开面板" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="GetStarted.Description" DefaultValue="点击按钮打开合同起草面板。" />
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="点击打开侧边栏填写合同信息。" />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>

